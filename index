<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site para Ditar</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            text-align: center;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 80%;
            max-width: 600px;
        }
        h1 {
            color: #333;
        }
        #textarea {
            width: 100%;
            height: 150px;
            margin-top: 20px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            color: #333;
            background-color: #f9f9f9;
            resize: none;
        }
        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
            font-size: 16px;
        }
        button:hover {
            background-color: #45a049;
        }
        .status {
            font-size: 16px;
            color: #666;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Ditado de Voz</h1>
        <p>Clique no botão abaixo e comece a ditar!</p>
        <button id="startButton">Iniciar Ditado</button>
        <textarea id="textarea" placeholder="Seu texto aparecerá aqui..."></textarea>
        <p class="status" id="status">Status: Esperando...</p>
    </div>

    <script>
        const startButton = document.getElementById('startButton');
        const textarea = document.getElementById('textarea');
        const status = document.getElementById('status');

        let recognition;

        // Verificando se o navegador tem suporte a reconhecimento de voz
        if ('webkitSpeechRecognition' in window) {
            recognition = new webkitSpeechRecognition();
            recognition.lang = 'pt-BR'; // Definindo o idioma para português
            recognition.continuous = true; // Continuar reconhecendo até o usuário parar
            recognition.interimResults = true; // Resultados temporários
            recognition.maxAlternatives = 1; // Número máximo de alternativas

            // Quando a fala for reconhecida, processa os resultados
            recognition.onresult = function(event) {
                let transcript = '';
                for (let i = event.resultIndex; i < event.results.length; i++) {
                    transcript += event.results[i][0].transcript;
                }
                textarea.value = transcript;
                status.textContent = 'Status: Ditado em andamento...';
            };

            // Quando o reconhecimento começa
            recognition.onstart = function() {
                status.textContent = 'Status: Começando o ditado...';
            };

            // Quando o reconhecimento para
            recognition.onend = function() {
                status.textContent = 'Status: Ditado finalizado.';
            };

            // Quando ocorre um erro
            recognition.onerror = function(event) {
                status.textContent = 'Erro no reconhecimento: ' + event.error;
            };

            // Função para iniciar o reconhecimento
            startButton.onclick = function() {
                recognition.start();
                startButton.disabled = true; // Desabilita o botão enquanto o ditado está em andamento
            };
        } else {
            status.textContent = 'Status: Seu navegador não suporta reconhecimento de voz.';
            startButton.disabled = true;
        }
    </script>
</body>
</html>
